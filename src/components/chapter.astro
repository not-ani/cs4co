---
interface Chapter {
  name: string
  school: string
  location: string
  members: number
  status: "active" | "growing" | "new"
}

const chapters: Chapter[] = [
  {
    name: "Cherry Creek Computer Science Honor Society",
    school: "Cherry Creek High School",
    location: "Greenwood Village, CO",
    members: 35,
    status: "active",
  },
  {
    name: "Grandview CS4CO",
    school: "Grandview High School",
    location: "Aurora, CO",
    members: 20,
    status: "growing",
  },
  {
    name: "Cherokee Trail CS4CO",
    school: "Cherokee Trail High School",
    location: "Aurora, CO",
    members: 2,
    status: "new",
  },
]

const statusConfig = {
  active: { label: "Active", color: "bg-[#0a0a0a] text-white" },
  growing: { label: "Growing", color: "bg-[#525252] text-white" },
  new: { label: "New", color: "bg-[#a3a3a3] text-white" },
}
---
<section>
  <div class="text-center py-16 px-12 md:px-16 lg:px-20 border-b border-[#d4d4d4]">
    <h2 class="text-4xl md:text-5xl font-bold text-[#0a0a0a] mb-4 leading-tight">Our Chapters</h2>
    <p class="text-base text-[#525252] max-w-2xl mx-auto leading-relaxed">
      CS4CO chapters are active across Colorado, bringing computer science education and opportunities to
      students statewide.
    </p>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3">
    {chapters.map((chapter, index) => {
      const isLastRow = index >= chapters.length - (chapters.length % 3 || 3)
      const isRightEdge = (index + 1) % 3 === 0

      return (
        <div
          class={`p-8 bg-white ${!isRightEdge ? "border-r border-[#d4d4d4]" : ""} ${
            !isLastRow ? "border-b border-[#d4d4d4]" : ""
          }`}
        >
          <div class="flex items-start justify-between mb-4">
            <div
              class={`inline-flex items-center px-3 py-1 text-xs font-medium rounded-full ${
                statusConfig[chapter.status].color
              }`}
            >
              {statusConfig[chapter.status].label}
            </div>
            <span class="text-sm font-medium text-[#525252]">{chapter.members} members</span>
          </div>

          <h3 class="text-lg font-bold text-[#171717] mb-2">{chapter.name}</h3>
          <p class="text-sm text-[#525252] mb-1">{chapter.school}</p>
          <p class="text-xs text-[#a3a3a3]">{chapter.location}</p>
        </div>
      )
    })}
  </div>
</section>
