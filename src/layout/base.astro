---
import "../styles/global.css"
import '@fontsource/geist-mono';


---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CS4CO</title>
  </head>
  <body class="antialiased">
    <div class="flex flex-col">
      <header class="w-full bg-white border border-[#d4d4d4] border-b-0 flex items-center justify-between px-8 py-5">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-[#0a0a0a] rounded flex items-center justify-center">
            <span class="text-white text-sm font-bold">CS</span>
          </div>
          <span class="text-lg font-bold text-[#0a0a0a]">CS4CO</span>
        </div>

        <nav class="hidden md:flex items-center gap-8">
          <a href="#projects" class="text-sm font-medium text-[#525252] hover:text-[#0a0a0a] transition-colors">
            Projects
          </a>
          <a href="#chapters" class="text-sm font-medium text-[#525252] hover:text-[#0a0a0a] transition-colors">
            Chapters
          </a>
        </nav>

        <button class="px-5 py-2 bg-[#0a0a0a] text-white text-sm font-medium border border-[#0a0a0a] hover:bg-[#262626] transition-colors">
          <a href="https://forms.gle/BfCeJqE9rGRtTeNH7">
          Join Us
          </a>
        </button>
      </header>
    </div>
    <slot />
  </body>
</html>
